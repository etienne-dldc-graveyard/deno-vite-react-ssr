{
  "$schema": "https://deno.land/x/denon@2.4.9/schema.json",
  "scripts": {
    "start": {
      "cmd": "deno run -A --unstable --no-check --config=deno.json --import-map=import_map.json ./src/server.ts",
      "env": { "PORT": "3001", "MODE": "development" }
    },
    "cache": {
      "cmd": "deno cache --unstable --config=deno.json --import-map=import_map.json ./src/server.ts",
      "watch": false
    }
  },
  "watcher": {
    "match": ["src/*"],
    "skip": ["*/.git/*", "src/pages/*", "src/generated/*"]
  }
}
